<!--template/tabbar/index.wxml 公共底部导航-->
<template name="tabBar">
  <view class="tabBar">
    <block wx:for="{{tabBar}}" wx:for-item="item" wx:key="tabBar">
      <view class="tabBar-item">
        <navigator open-type="redirect" url="{{item.pagePath}}" hover-class="none">
          <view><image class="icon" mode='aspectFit' src='{{item.iconPath}}'></image></view>
          <view class="{{item.current== 1 ? 'tabBartext' :''}}">{{item.text}}</view>
        </navigator>  
      </view>
    </block>
  </view>
</template>
